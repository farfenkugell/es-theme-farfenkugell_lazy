<?xml version="1.0" encoding="UTF-8"?>
	<theme defaultView="grid">
    <formatVersion>7</formatVersion>
    <feature supported="carousel">
	
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.002 0.0</pos>
        <logoAlignment>left</logoAlignment>         
        <size>0.8 0.934</size>
        <logoScale>1</logoScale>
        <zIndex>99</zIndex>          
        <logoSize>0.20 0.2</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>       
      </carousel>
	  
	  	<image name="logo">
			<path>./assets/logos/${system.theme}.png</path>
			<zIndex>98</zIndex>  
		</image>
	  
	 <text name="systemInfo">     
         <pos>0.25 0.85</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>808080</color>
		 <glowColor>ffffff</glowColor> 
         <fontPath>./Roboto-Regular.ttf</fontPath>
	     <fontSize>0.05</fontSize>
         <zIndex>97</zIndex>	     
     </text>             

    <text name="logoText">
         <fontPath>./Roboto-Regular.ttf</fontPath>
         <fontSize>0.04</fontSize>
		 <forceUppercase>true</forceUppercase>
         <lineSpacing>1</lineSpacing>
         <alignment>center</alignment>
         <color>ffffff</color>
    </text>
	  
	<image name="background2" extra="static">
			<path>./assets/overlay.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>30</zIndex>
		</image>
	<image name="sysBackgrounds" extra="true">
			<origin>0 0</origin>
			<pos>0.229166666666667 0</pos>
			<size>0.770833333333333 1</size>
			<path>{random:image}</path>
			<zIndex>29</zIndex>
	</image>
    </view>
    </feature>
  
     <view name="menu">
    <menuBackground name="menubg">
         <color>008080</color>
    </menuBackground>
	
	<menuText name="menutext, menutitle">
         <fontPath>./Roboto-Regular.ttf</fontPath>
         <fontSize>.035</fontSize>
         <color>000000</color>
    </menuText>
	
	<menuText name="menufooter, menutextsmall">
         <fontPath>./Roboto-Regular.ttf</fontPath>
         <fontSize>.024</fontSize>		 
         <color>000000</color>
    </menuText>
	</view>
  
    <view name="system, grid">
    <helpsystem name="help">
      <origin>-9 1</origin>
    </helpsystem>
    </view>  
       
  	<view name="screen">
         <text name="clock">
	     <color>808080</color>
		 <glowColor>ffffff</glowColor> 
	     <fontPath>./Roboto-Regular.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <pos>0.48 0.0.5</pos>
         <size>0.5 0.058</size>
		 <zIndex>90</zIndex>
    </text>
    </view>
	
	<view name="grid">
		<image name="gridOverlay" extra="true">
			<path>./assets/tileoverlay.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>8</zIndex>
		</image>

		<imagegrid name="gamegrid">
			<pos>0.052083333333333 0.199074074074074</pos>
			<size>0.895833333333333 0.62962962962963</size>
			<autoLayout>3 2</autoLayout>
			<margin>-0 0</margin>
			<autoLayoutSelectedZoom>1.15</autoLayoutSelectedZoom>
		</imagegrid>

		<gridtile name="default">
			<size>0.20 0.277777777777778</size>
			<backgroundColor>42424200</backgroundColor>
			<imageColor>A5A5A5ff</imageColor>
		</gridtile>

		<gridtile name="selected">
			<size>0.20 0.277777777777778</size>
			<backgroundColor>42424200</backgroundColor>
			<imageColor>ffffffff</imageColor>
		</gridtile>   

		<text name="md_name">
			<color>ffffff</color>
			<fontPath>./Roboto-Regular.ttf</fontPath>
		</text>
			<imagegrid name="gamegrid">
			<autoLayout>5 1</autoLayout>
			<scrollLoop>true</scrollLoop>
			<autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
			<imageSource>thumbnail</imageSource>
			<margin>0.00625 0.011111111111111</margin>
			<size>0.895833333333333 0.342592592592593</size>
			<pos>0.052083333333333 0.637037037037037</pos>
			<showVideoAtDelay>800</showVideoAtDelay>
			<animateSelection>true</animateSelection>
			<zIndex>10</zIndex>
	</imagegrid>
	<video name="md_video">
			<pos>0 -0.3</pos>
			<size>1 1</size>
			<zIndex>6</zIndex>
			<origin>0 0</origin>
			<delay>1</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<loops>10</loops>
			<effect>none</effect>
	</video>
	<imagegrid name="gamegrid">
			<showVideoAtDelay>-1</showVideoAtDelay>
	</imagegrid>
	<gridtile name="default">
			<backgroundCenterColor>40404080</backgroundCenterColor>
			<backgroundEdgeColor>00000000</backgroundEdgeColor>
			<padding>4 4</padding>
			<imageSizeMode>minSize</imageSizeMode>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundColor>42424200</backgroundColor>
			<imageColor>6d6d6dFF</imageColor>
	</gridtile>
	<gridtile name="selected">
			<padding>4 4</padding>
			<imageColor>ffffffff</imageColor>
			<backgroundCornerSize>0</backgroundCornerSize>
			<backgroundEdgeColor>909090</backgroundEdgeColor>
	</gridtile>
	<image name="gridtile.image">
			<roundCorners>0</roundCorners>
	</image>
	
	<image name="md_marquee">
			<pos>0.5 0.162037037037037</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.35 0.28</maxSize>
			<zIndex>100</zIndex>
	</image>
	<text name="md_description">
			<color>ffffff</color>
			<fontPath>./Roboto-Regular.ttf</fontPath>
			<fontSize>0.034</fontSize>
			<alignment>center</alignment>
			<size>0.8 0.3</size>
			<pos>0.1 0.3</pos>
	</text> 
	<text name="gridtile">
			<visible>true</visible>
			<pos>0 0</pos>
			<size>1 1</size>
			<fontPath>./Roboto-Regular.ttf</fontPath>
			<fontSize>0.030</fontSize>
			<lineSpacing>1.15</lineSpacing>
			<alignment>center</alignment>
			<singleLineScroll>false</singleLineScroll>
			<padding>0 0</padding>      
			<backgroundColor>00000000</backgroundColor>
			<glowSize>3</glowSize>
			<visible>false</visible>
	</text>
	</view>
</theme>
